<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.rajat.samplelist.Main2Activity">

    <TextView
        android:id="@+id/text_to_anim"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="View Animation"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/value_anim"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Value Animation"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/object_anim"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Object Animation"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/view_property_anim"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="View Property Animation"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/vector_anim"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/vector_drawable"/>

</LinearLayout>
